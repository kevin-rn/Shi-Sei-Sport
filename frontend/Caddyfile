:80 {
    encode gzip

    # Handle API requests
    handle /api/* {
        reverse_proxy backend:3000
    }

    # Handle Admin Panel
    handle /admin* {
        reverse_proxy backend:3000
    }

    # Handle Minio Images
    handle_path /media/* {
        rewrite * /judo-bucket{path}
        reverse_proxy minio:9000
    }

    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }
}