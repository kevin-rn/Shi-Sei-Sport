:80 {
	encode gzip

	handle /api/* {
		reverse_proxy backend:3000
	}

	handle /graphql {
		reverse_proxy backend:3000
	}

	handle /admin* {
		reverse_proxy backend:3000
	}

	handle /_next/* {
		reverse_proxy backend:3000
	}

	handle_path /media/* {
		rewrite * /judo-bucket{path}
		reverse_proxy minio:9000
	}

	handle {
		root * /usr/share/caddy
		try_files {path} /index.html
		file_server
	}
}
